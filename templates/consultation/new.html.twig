{% extends 'dashboard.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <!-- Breadcrumbs-->
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="#">Konsultacja</a>
            </li>
            <li class="breadcrumb-item active">Dodawanie</li>
        </ol>

        <!-- DataTables Example -->
        <div class="card mb-3">
            <div class="card-header">
                Dodaj nowy termin konsultacji
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    {{ form_start(form) }}
                    <div class="data-wrapper">
                        {{ form_row(form.startDate) }}
                        {{ form_row(form.endDate) }}
                    </div>
                    <div class="button-row">
                        <a href="{{ path('consultations') }}" class="btn btn-link">
                            <i class="fa fa-list-alt" aria-hidden="true"></i> Wróć do listy
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fa fa-save" aria-hidden="true"></i> Stwórz
                        </button>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
